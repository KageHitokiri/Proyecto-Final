{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}
{# ... #}
{% block title %} DicePals | Iniciar Sesión {% endblock %}

{% block stylesheets %}    
    <link href="css/bottom.css" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />
    <link href="css/general.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="contaioner mt-5">
        <div class="row">
            <div class="col-6 m-auto">
                <h1>Inicia sesión</h1>    
                <form name="test"action="{{ path('login') }}" method="post"><br>    
                    <label for="username">Correo Electrónico:</label><br>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"/><br>
                    <label for="password">Contraseña:</label><br>
                    <input type="password" id="password" name="_password"/><br><br>
                    {# If you want to control the URL the user is redirected to on success
                    <input type="hidden" name="_target_path" value="/account"/> #}
                    <button type="submit">Iniciar sesión</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}